mixin features(data = {})
    .features&attributes(attributes)  
        .features__inner.container
            .features__fixed 
                .sticky-block 
                    .features__fixed-content
                        p.features__subtitle!= data.subtitle
                        p.features__badge #{data.badge}
                        if data.text
                            p.features__text #{data.text}
                        if data.descr
                            p.features__descr #{data.descr}
                    .features__image 
                        img(src=data.img, alt="features")
            .features__content 
                .features__list
                    each item in data.items
                        .features__item 
                            .features__item-image
                                img(src=item.img, alt="feature")
                            if data.video
                                .features__item-video-icon
                                    <svg width="20" height="22" viewBox="0 0 20 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M17.75 7.96875C20.0833 9.3159 20.0833 12.6841 17.75 14.0312L5.75 20.959C3.41667 22.3061 0.499999 20.622 0.499999 17.9277L0.5 4.07226C0.5 1.37796 3.41667 -0.306136 5.75 1.04101L17.75 7.96875Z" stroke="white"/>
                                    </svg>
                                .features__item-channel     
                                    .features__item-channel-text-block
                                        p.features__item-channel-title Первый канал
                                        p.features__item-channel-descr передача «доброе утро»
                                    .features__item-channel-icon 
                                        img(src="assets/img/icons/1channel.jpg", alt="channel")
                            .features__item-content 
                                p.features__item-badge #{item.badge}
                                p.features__item-title!= item.title
                                p.features__item-descr #{item.descr}
                if data.load
                    button.features__load-more 
                        p развернуть все 10
                        .btn.circle.s 
                            <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M9 1L9 6C9 7.65685 7.65685 9 6 9L1 9" stroke="#493F39" stroke-linecap="round"/>
                                <path d="M9 11.4004L9 17.0004" stroke="#493F39" stroke-linecap="round"/>
                                <path d="M11.4004 9H17.0004" stroke="#493F39" stroke-linecap="round"/>
                            </svg>